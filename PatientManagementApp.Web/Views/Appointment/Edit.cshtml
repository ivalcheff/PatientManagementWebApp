@using PatientManagementApp.Web.ViewModels.AppointmentViewModels
@using static PatientManagementApp.Common.ModelValidationConstraints.Global
@model EditAppointmentViewModel

@{
    ViewBag.Title = "Edit Appointment";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="PractitionerId" />
            <input type="hidden" asp-for="PatientId" />
            <h3>Personal Details</h3>
            <div class="mb-3">
                <label asp-for="@Model.PatientFirstName" class="form-label-add-edit">Patient's First Name</label>
                <input asp-for="@Model.PatientFirstName" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.PatientFirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PatientLastName" class="form-label-add-edit">Patient's Last Name</label>
                <input asp-for="@Model.PatientLastName" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.PatientLastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.StartDate" class="form-label-add-edit">Start time</label>
                <input asp-for="@Model.StartDate" class="form-control" aria-required="false"/>
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EndDate" class="form-label-add-edit">End time</label>
                <input asp-for="@Model.EndDate" class="form-control" aria-required="false"/>
                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="false"/>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <input class="btn btn-warning btn-dark-text mb-2 w-100 py-3 fw-bold rounded" type="submit" value="Confirm"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}