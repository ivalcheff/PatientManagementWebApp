@using PatientManagementApp.Web.ViewModels.AppointmentViewModels;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<AppointmentInfoViewModel>

@{
    ViewBag.Title = "My Appointments";
}

<h2>My Appointments</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Start</th>
            <th>End</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.PatientFirstName</td>
                <td>@a.PatientLastName</td>
                <td>@a.StartDateTime</td>
                <td>@a.EndDateTime</td>
                <td>
                    <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-info">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-info">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Appointment</a>

