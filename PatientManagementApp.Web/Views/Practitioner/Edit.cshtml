
@using PatientManagementApp.Web.ViewModels.PractitionerViewModels
@model PractitionerEditViewModel


@{
    ViewBag.Title = "Edit Practitioner Details";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <h3>Personal Details</h3>
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label-add-edit">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label-add-edit">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialties"></label>
                <select asp-for="SelectedSpecialties" asp-items="Model.Specialties" class="form-control" multiple="multiple"></select>
            </div>
            
            <h3>Contact information</h3>
            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label-add-edit">Email</label>
                <input asp-for="@Model.Email" class="form-control" aria-required="false" placeholder="Email (optional)"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Phone" class="form-label-add-edit">Phone number</label>
                <input asp-for="@Model.Phone" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAvailableOnline"></label>
                <input asp-for="IsAvailableOnline" class="form-control" type="checkbox" />
            </div>

            
            <div class="mb-3">
                <input class="btn btn-warning btn-dark-text mb-2 w-100 py-3 fw-bold rounded" type="submit" value="Confirm"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

