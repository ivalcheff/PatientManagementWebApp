@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<PatientManagementApp.Web.ViewModels.PractitionerViewModels.PractitionerDetailsViewModel>

@{
    ViewBag.Title = "All Practitioners";
}

<h2>All Practitioners</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.FirstName</td>
            <td>@p.LastName</td>
            <td>@p.Email</td>
            <td>
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info">Details</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-info">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>