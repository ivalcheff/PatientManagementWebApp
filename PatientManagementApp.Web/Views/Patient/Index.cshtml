
@{
    ViewBag.Title = "My Patients";
}
@using PatientManagementApp.Web.ViewModels.PatientViewModels
@model IEnumerable<PatientDetailsViewModel>

<h2 class="text-center">@ViewBag.Title</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Phone Number</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.FirstName</td>
            <td>@p.LastName</td>
            <td>@p.Age</td>
            <td>@p.PhoneNumber</td>
            <td>@p.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info">Details</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-info">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Patient</a>
